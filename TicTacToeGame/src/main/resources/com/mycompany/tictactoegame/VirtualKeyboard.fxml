    <Button fx:id="buttonY" text="Y" onAction="#addCharacter" style="-fx-font-size: 20px; -fx-padding: 10px;" GridPane.rowIndex="2" GridPane.columnIndex="4"/>
    <Button fx:id="buttonZ" text="Z" onAction="#addCharacter" style="-fx-font-size: 20px; -fx-padding: 10px;" GridPane.rowIndex="2" GridPane.columnIndex="5"/>

    <!-- Row 4 -->
    <Button fx:id="buttonSpace" text="Space" onAction="#addCharacter" style="-fx-font-size: 20px; -fx-padding: 10px;" GridPane.columnSpan="6" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

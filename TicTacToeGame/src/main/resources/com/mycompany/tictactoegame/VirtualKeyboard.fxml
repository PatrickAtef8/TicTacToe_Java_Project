    <Button fx:id="buttonH" text="H" onAction="#addCharacter" style="-fx-font-size: 20px; -fx-padding: 10px;" GridPane.rowIndex="0" GridPane.columnIndex="7"/>
    <Button fx:id="buttonI" text="I" onAction="#addCharacter" style="-fx-font-size: 20px; -fx-padding: 10px;" GridPane.rowIndex="0" GridPane.columnIndex="8"/>
    <Button fx:id="buttonJ" text="J" onAction="#addCharacter" style="-fx-font-size: 20px; -fx-padding: 10px;" GridPane.rowIndex="0" GridPane.columnIndex="9"/>

    <!-- Row 2 -->
    <Button fx:id="buttonK" text="K" onAction="#addCharacter" style="-fx-font-size: 20px; -fx-padding: 10px;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button fx:id="buttonL" text="L" onAction="#addCharacter" style="-fx-font-size: 20px; -fx-padding: 10px;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

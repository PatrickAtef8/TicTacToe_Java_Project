    <Button fx:id="buttonP" text="P" onAction="#addCharacter" style="-fx-font-size: 20px; -fx-padding: 10px;" GridPane.rowIndex="1" GridPane.columnIndex="5"/>
    <Button fx:id="buttonQ" text="Q" onAction="#addCharacter" style="-fx-font-size: 20px; -fx-padding: 10px;" GridPane.rowIndex="1" GridPane.columnIndex="6"/>
    <Button fx:id="buttonR" text="R" onAction="#addCharacter" style="-fx-font-size: 20px; -fx-padding: 10px;" GridPane.rowIndex="1" GridPane.columnIndex="7"/>
    <Button fx:id="buttonS" text="S" onAction="#addCharacter" style="-fx-font-size: 20px; -fx-padding: 10px;" GridPane.rowIndex="1" GridPane.columnIndex="8"/>

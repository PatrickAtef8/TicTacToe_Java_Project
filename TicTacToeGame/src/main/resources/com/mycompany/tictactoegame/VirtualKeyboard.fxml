<Button fx:id="buttonCaps" text="Caps" onAction="#toggleCapsLock" 
        style="-fx-font-size: 30px; -fx-padding: 15px; -fx-background-color: #FFA500; -fx-text-fill: black; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 5, 0, 0, 2);" 

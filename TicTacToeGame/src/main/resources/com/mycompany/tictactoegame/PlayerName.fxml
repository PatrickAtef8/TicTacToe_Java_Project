<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.input.*?>

<VBox alignment="CENTER" spacing="40" style="-fx-background-color: #2B0B33; -fx-padding: 40px;" 
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.mycompany.tictactoegame.PlayerNameController">

    <!-- Title -->
    <Label style="-fx-text-fill: yellow; -fx-font-size: 50px; -fx-font-weight: bold; -fx-font-family: 'Comic Sans MS';" 
           text="Enter Player Names" />

    <!-- Player X Name -->
    <HBox alignment="CENTER" spacing="20">
        <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" text="ðŸŽ® Player X: " />
        <TextField fx:id="playerXName" promptText="Enter Player X Name" 
                   style="-fx-font-size: 22px; -fx-padding: 10px; -fx-background-radius: 10px;" />
    </HBox>

    <!-- Player O Name -->
    <HBox alignment="CENTER" spacing="20">
        <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" text="ðŸŽ® Player O: " />
        <TextField fx:id="playerOName" promptText="Enter Player O Name" 
                   style="-fx-font-size: 22px; -fx-padding: 10px; -fx-background-radius: 10px;" />
    </HBox>

    <!-- Game Mode Selection -->
    <HBox alignment="CENTER" spacing="20">
        <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" text="ðŸŽ® Game Mode: " />
        <ChoiceBox fx:id="modeChoiceBox" style="-fx-font-size: 22px; -fx-padding: 10px;" />
    </HBox>

    <!-- Difficulty Selection (Initially Disabled) -->
    <HBox alignment="CENTER" spacing="20">
        <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" text="ðŸ’¡ Difficulty: " />
        <ChoiceBox fx:id="difficultyChoiceBox" style="-fx-font-size: 22px; -fx-padding: 10px;" />
    </HBox>


    <!-- Start Game Button -->
    <Button fx:id="startGameButton" onAction="#startGame" 
            style="-fx-background-color: linear-gradient(to right, #00FF00, #66FF66); 
                   -fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; 
                   -fx-padding: 20px 40px; -fx-background-radius: 20px; -fx-border-radius: 20px; 
                   -fx-font-family: 'Comic Sans MS'; -fx-effect: dropshadow(gaussian, rgba(0,255,0,0.7), 20, 0, 0, 0);" 
            text="Start Game" />
    
    <Button fx:id="backButton" onAction="#switchToGameModeUI"
        text="Back"
        style="-fx-background-color: linear-gradient(to right, #00FF00, #66FF66);
               -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;
               -fx-padding: 10px 20px; -fx-background-radius: 20px;
               -fx-border-radius: 20px; -fx-font-family: 'Comic Sans MS';
               -fx-effect: dropshadow(gaussian, rgba(0,255,0,0.7), 15, 0, 0, 0);" />
</VBox>



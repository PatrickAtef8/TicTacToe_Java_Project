<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="40" style="-fx-background-color: #2B0B33; -fx-padding: 40px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.tictactoegame.PlayerNameController">

    <Label style="-fx-text-fill: yellow; -fx-font-size: 50px; -fx-font-weight: bold; -fx-font-family: 'Comic Sans MS'; -fx-effect: dropshadow(gaussian, rgba(255,215,0,0.8), 10, 0, 0, 0);" text="Enter Player Names" />
    
    <HBox alignment="CENTER" spacing="20">
        <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; -fx-font-family: 'Comic Sans MS';" text="ðŸŽ® Player X: " />
        <TextField fx:id="playerXName" promptText="Enter Player X Name" style="-fx-font-size: 22px; -fx-font-family: 'Comic Sans MS'; -fx-padding: 10px; -fx-background-radius: 10px;" />
    </HBox>
    
    <HBox alignment="CENTER" spacing="20">
        <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; -fx-font-family: 'Comic Sans MS';" text="ðŸŽ® Player O: " />
        <TextField fx:id="playerOName" promptText="Enter Player O Name" style="-fx-font-size: 22px; -fx-font-family: 'Comic Sans MS'; -fx-padding: 10px; -fx-background-radius: 10px;" />
    </HBox>
    
    <Button fx:id="startGameButton" onAction="#startGame" style="-fx-background-color: linear-gradient(to right, #00FF00, #66FF66); -fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; -fx-padding: 20px 40px; -fx-background-radius: 20px; -fx-border-radius: 20px; -fx-font-family: 'Comic Sans MS'; -fx-effect: dropshadow(gaussian, rgba(0,255,0,0.7), 20, 0, 0, 0);" text="Start Game" />

</VBox>
